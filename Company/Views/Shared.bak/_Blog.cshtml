@using Company.Extends.Language
@{
    ViewBag.Title = ViewBag.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- ******BLOG LIST****** -->
<div class="blog container">
    @*<h2 class="title">Blog</h2>*@
    <div class="row">
        
        @RenderBody()

        <aside id="blog-sidebar" class="blog-sidebar col-md-3 col-sm-4 col-xs-12 col-md-offset-1 col-sm-offset-0 col-xs-offset-0">
            <section class="widget search">
                <h3 class="sr-only title">Search Blog</h3>
                <form class="search-blog-form">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search blog...">
                    </div>
                    <button type="submit" class="btn btn-cta btn-cta-primary"><i class="fa fa-search"></i></button>
                </form>
            </section><!--//search-->
            <section class="widget social">
                <h3 class="title">@Resource.website_blog_get_connected</h3>
                <ul class="list-inline">
                    <li><a href="https://www.facebook.com/Technology-Solution-Miraway-1716653608580281/"><i class="fa fa-facebook-square"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter-square"></i></a></li>
                    <li><a href="#"><i class="fa fa-envelope-square"></i></a></li>
                    <li><a href="#"><i class="fa fa-rss-square"></i></a></li>
                </ul>
            </section><!--//widget-->
            <section class="widget categories">
                <h3 class="title">@Resource.website_blog_categories</h3>
                <ul class="list-unstyled">
                   @Html.Action("Categories","Blog")
                </ul>
            </section><!--//widget-->
            
            <section class="widget recent-posts">
                <h3 class="title">@Resource.website_blog_recent_posts</h3>
                <ul class="list-unstyled">
                    @Html.Action("RecentPosts", "Blog")
                </ul>
            </section><!--//widget-->
        </aside><!--//blog-side-bar-->
    </div><!--//row-->
</div><!--//blog-->




