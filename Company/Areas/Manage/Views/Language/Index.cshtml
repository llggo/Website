@model IEnumerable<Company.Areas.Manage.Models.CrudLanguage>

@using System.Threading
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
    string language = Thread.CurrentThread.CurrentCulture.IetfLanguageTag;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LanguageLanguage[language].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language.Info)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LanguageLanguage[language].Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language.Info)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Language.Id }) |
            @Html.ActionLink("Details", "Details", new { id= item.Language.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id= item.Language.Id })
        </td>
    </tr>
}

</table>
