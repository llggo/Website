    <script src="~/Extends/Content/Plugin/ckfinder/ckfinder.js"></script>
    <script>
        var finder = new CKFinder();
        $(document).ready(function () {

            setCollapse();
            @foreach(var ll in LanguageList)
            {
                @:file("#upload-image-logo-@ll.CodeCheck ", "text-image-logo-@ll.CodeCheck");
                @:file("#upload-image-c1-@ll.CodeCheck ", "text-image-c1-@ll.CodeCheck");
                @:file("#upload-image-c2-@ll.CodeCheck ", "text-image-c2-@ll.CodeCheck");
                @:file("#upload-image-c3-@ll.CodeCheck ", "text-image-c3-@ll.CodeCheck");
                @:file("#upload-image-c4-@ll.CodeCheck ", "text-image-c4-@ll.CodeCheck");
                @:file("#upload-image-c5-@ll.CodeCheck ", "text-image-c5-@ll.CodeCheck");
                @:file("#upload-image-c6-@ll.CodeCheck ", "text-image-c6-@ll.CodeCheck");


                <text>

                    $('#general-@ll.Id').on('show.bs.collapse', function () {
                        sls('general-@ll.Id');
                    }).on('hidden.bs.collapse', function () {
                        sls('');
                    });;
                </text>
            }
        });

        function file(buttonId, txtboxId) {
            $(buttonId).click(function () {
                finder.selectActionFunction = function (fileUrl) {
                    document.getElementById(txtboxId).value = fileUrl;
                }
                finder.popup();
            });
        }

        function sls(id) {
            if (typeof (Storage) !== "undefined") {
                // Gán dữ liệu
                sessionStorage.idCollapse = id;
                // Lấy dữ liệu
                var domain = sessionStorage.domain; // freetuts.net
            } else {
                document.write('Trình duyệt của bạn không hỗ trợ local storage');
            }
        }

        function gls() {
            if (typeof (Storage) !== "undefined") {
                // Lấy dữ liệu
                return domain = sessionStorage.idCollapse; // freetuts.net
            } else {
                document.write('Trình duyệt của bạn không hỗ trợ local storage');
            }
        }

        function setCollapse() {
            var id = gls();
            $('#' + id).collapse({
                toggle: true
            });
        }
    </script>
}

