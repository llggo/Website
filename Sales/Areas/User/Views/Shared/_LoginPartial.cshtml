@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", style = "display:none;" }))
    {
        @Html.AntiForgeryToken()
    }

    <li>
        @Html.ActionLink(User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: new { area = "User" }, htmlAttributes: new { title = "Manage" })
    </li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    //}
}
else
{
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: new { area = "User" }, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: new { area = "User"}, htmlAttributes: new { id = "loginLink" })</li>
}
