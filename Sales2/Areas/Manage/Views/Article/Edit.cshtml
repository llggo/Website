@model Sales.Areas.Manage.Models.Article

@{
    ViewBag.Title = "Edit";
}

<h2>Sửa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Create.Time)
    @Html.HiddenFor(model => model.Create.User)

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: null)
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter name" } })
                <small id="nameHelp" class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </small>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Image, htmlAttributes: null)
                @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @id = "input-image", @class = "form-control", @placeholder = "Ảnh" } })
                <small id="nameHelp" class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                </small>
            </div>
        </div>

        <div class="col-md-1">
            <label>Upload</label>
            <div class="form-group">
                <input id="btn-image-upload" type="button" value="File ..." class="form-control" />
            </div>
        </div>


        <div class="col-md-1">
            <div class="form-group">
                @Html.LabelFor(model => model.Visible, htmlAttributes: null)
                @Html.EditorFor(model => model.Visible, new { htmlAttributes = new { @class = "form-control", @style = "margin:0 auto;" } })
                <small id="nameHelp" class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.Visible, "", new { @class = "text-danger" })
                </small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Describle, htmlAttributes: null)
                @Html.EditorFor(model => model.Describle, new { htmlAttributes = new { @class = "form-control", @style = "margin:0 auto;" } })
                <small id="nameHelp" class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.Describle, "", new { @class = "text-danger" })
                </small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Content, htmlAttributes: null)
                @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @id = "text-editor", @class = "form-control", @style = "margin:0 auto;" } })
                <small id="nameHelp" class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </small>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Tạo" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script src="~/Plugins/ckeditor/ckeditor.js"></script>
    <script src="~/Plugins/ckfinder/ckfinder.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {

            var finder = new CKFinder();

            $('#btn-image-upload').click(function () {
                finder.selectActionFunction = function (fileUrl) {
                    document.getElementById('input-image').value = fileUrl;
                }
                finder.popup();
            });

            CKEDITOR.replace("Content");

        });
    </script>
}


